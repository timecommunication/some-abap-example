FUNCTION ZF_QUERY_PERSON_H10009.
*"----------------------------------------------------------------------
*"*"本地接口：
*"  IMPORTING
*"     VALUE(IV_ZUSERID) TYPE  ZE_ZUSERID OPTIONAL
*"     VALUE(IV_ZNAME) TYPE  ZE_ZNAME OPTIONAL
*"     VALUE(IV_ZGENDER) TYPE  ZE_ZGENDER OPTIONAL
*"  EXPORTING
*"     VALUE(EV_STATUS) TYPE  CHAR20
*"  TABLES
*"      ET_PERSON TYPE  ZTTPERSON_H10009 OPTIONAL
*"----------------------------------------------------------------------
  DATA LV_STR TYPE STRING.


  IF IV_ZUSERID IS NOT INITIAL.

    CONCATENATE ' ZUSERID = ' TEXT-001  IV_ZUSERID TEXT-001 INTO LV_STR  .
  ENDIF.

  IF IV_ZNAME IS NOT INITIAL .
    IF LV_STR IS INITIAL.
      CONCATENATE LV_STR ' ZNAME = ' TEXT-001 IV_ZNAME TEXT-001 INTO LV_STR.
    ELSE.
      CONCATENATE   LV_STR ' AND ' ' ZNAME = ' TEXT-001 IV_ZNAME TEXT-001 INTO LV_STR.
    ENDIF.

  ENDIF.

  IF IV_ZGENDER IS NOT INITIAL.
    IF LV_STR IS INITIAL.
      CONCATENATE LV_STR ' ZGENDER = ' TEXT-001 IV_ZGENDER TEXT-001 INTO LV_STR.
    ELSE.
      CONCATENATE  LV_STR ' AND '  ' ZGENDER = ' TEXT-001 IV_ZGENDER TEXT-001 INTO LV_STR.
    ENDIF.
  ENDIF.


  SELECT * FROM ZTPERSON_H10009 INTO TABLE ET_PERSON[]
    WHERE (LV_STR).
  IF SY-SUBRC = 0.
    EV_STATUS = 'SUCCESS'.
  ELSE.
    EV_STATUS = 'FAILED'.
  ENDIF.




ENDFUNCTION.